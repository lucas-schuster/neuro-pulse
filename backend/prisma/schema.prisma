generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Therapist {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  clients   Client[]
  sessions  Session[]
}

model Client {
  id          String   @id @default(uuid())
  code        String   @unique
  therapist   Therapist @relation(fields: [therapistId], references: [id])
  therapistId String
  sessions    Session[]
}

model Session {
  id          String   @id @default(uuid())
  clientId    String
  therapistId String
  scale       String
  response    SurveyResponse?
}

model SurveyResponse {
  id            String   @id @default(uuid())
  sessionId     String   @unique
  scale_id      String
  resposta_json Json
  created_at    DateTime @default(now())
}

